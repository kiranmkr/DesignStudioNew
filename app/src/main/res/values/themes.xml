<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesignStudioNew" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="fontFamily">@font/avenirltstd_black</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

    </style>

    <style name="AppTheme.Launcher" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launcher_screen_with_logo</item>
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

</resources>